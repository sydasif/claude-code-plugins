{
    "name": "code-review",
    "version": "1.0.0",
    "description": "Semantic code review plugin for Claude Code with customizable project-specific rules",
    "author": "Code Review Plugin",
    "license": "MIT",
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/tools/code-review-plugin.sh log"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/tools/code-review-plugin.sh review"
                    }
                ]
            }
        ]
    },
    "agents": [
        {
            "name": "code-reviewer",
            "file": "agents/code-reviewer.md"
        }
    ],
    "settings": {
        "codeReview": {
            "enabled": true,
            "fileExtensions": [
                "py",
                "ipynb"
            ],
            "rulesFile": ".claude/code-review/rules.md"
        }
    },
    "requirements": [
        "jq"
    ],
    "capabilities": [
        "semantic_analysis",
        "incremental_reviews",
        "customizable_rules"
    ]
}